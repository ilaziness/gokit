# EditorConfig is awesome: https://EditorConfig.org

# 根目录配置，表示这是项目的根目录
root = true

# 匹配所有文件
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 匹配 Go 源文件
[*.go]
indent_style = tab
indent_size = 4
max_line_length = 120

# 匹配 Markdown 文件
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# 匹配 YAML 文件
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# 匹配 JSON 文件
[*.json]
indent_style = space
indent_size = 2

# 匹配 HTML 文件
[*.html]
indent_style = space
indent_size = 2

# 匹配 CSS 文件
[*.css]
indent_style = space
indent_size = 2

# 匹配 JavaScript 文件
[*.js]
indent_style = space
indent_size = 2

# 匹配 Python 文件
[*.py]
indent_style = space
indent_size = 4

# 匹配 Shell 脚本文件
[*.sh]
indent_style = space
indent_size = 4

# 匹配 Makefile
[Makefile]
indent_style = tab